{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "node"],
  "rules": {
    // General
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "camelcase": "error",
    "no-unused-vars": "warn",
    "no-var": "error",
    "max-lines-per-function": ["warn", 50],
    "max-lines": ["warn", 300],

    // React
    "react/prop-types": "off",
    "react/no-unescaped-entities": "off",

    // Import
    "import/no-unresolved": "off",
    "import/first": "error",
    "import/exports-last": "error",
    "import/no-commonjs": "error",
    "import/no-relative-parent-imports": "warn"
  },
  "settings": {
    "react": {
      "version": "16.13.1"
    }
  }
}
